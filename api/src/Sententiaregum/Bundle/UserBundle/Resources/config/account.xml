<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="sen.account.controller" class="Sententiaregum\Bundle\UserBundle\Controller\AccountController">
            <argument type="service" id="sen.service.create_account" />
            <argument type="service" id="sen.user.repository" />
            <argument>%registration.defaultRoles%</argument>
        </service>

        <service id="sen.user.repository" class="Sententiaregum\Bundle\UserBundle\Entity\UserRepository">
            <argument type="service" id="database_connection" />
        </service>

        <service id="sen.service.create_account" class="Sententiaregum\Bundle\UserBundle\Service\CreateAccount">
            <argument type="service" id="sen.util.hasher" />
            <argument type="service" id="sen.user.repository" />
            <argument type="service" id="validator" />
        </service>

    </services>

</container>

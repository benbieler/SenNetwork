<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="sen.token.controller" class="Sententiaregum\Bundle\UserBundle\Controller\TokenController">
            <argument type="service" id="sen.security.token" />
            <argument type="service" id="sen.security.user_provider" />
            <argument type="service" id="sen.util.hasher" />
        </service>

        <service id="sen.security.user_provider" class="Sententiaregum\Bundle\UserBundle\Security\UserProvider">
            <argument type="service" id="sen.user.repository" />
        </service>

        <service id="sen.security.api_key_auth" class="Sententiaregum\Bundle\UserBundle\Security\ApiKeyAuthentication">
            <argument type="service" id="sen.security.user_provider" />
        </service>

        <service id="sen.security.token" class="Sententiaregum\Bundle\UserBundle\Security\Token">
            <argument type="service" id="sen.user.repository" />
        </service>

        <service id="sen.util.hasher" class="Sententiaregum\Bundle\UserBundle\Util\PasswordHasher" />

    </services>

</container>

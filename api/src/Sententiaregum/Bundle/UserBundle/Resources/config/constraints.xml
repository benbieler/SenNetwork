<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sen.user.constraint.unique_user" class="Sententiaregum\Bundle\UserBundle\Validator\Constraint\UniqueUsernameConstraintValidator">
            <argument type="service" id="sen.user.repository" />
            <tag name="validator.constraint_validator" alias="unique_user_constraint" />
        </service>

        <service id="sen.user.constraint.unique_email" class="Sententiaregum\Bundle\UserBundle\Validator\Constraint\UniqueEmailConstraintValidator">
            <argument type="service" id="sen.user.repository" />
            <tag name="validator.constraint_validator" alias="unique_email_constraint" />
        </service>
    </services>

</container>

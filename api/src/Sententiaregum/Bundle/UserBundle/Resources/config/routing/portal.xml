<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ma27_social_networking_request-token" path="/request-token" methods="POST">
        <default key="_controller">sen.token.controller:requestTokenAction</default>
    </route>

    <route id="ma27_social_networking_create-account" path="/create-account" methods="POST">
        <default key="_controller">sen.account.controller:createAction</default>
    </route>
</routes>

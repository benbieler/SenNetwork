<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Sententiaregum\CoreDomain\User\Role" table="SEN_Role">

        <unique-constraints>
            <unique-constraint columns="name" name="sen_role_role" />
        </unique-constraints>

        <id name="roleId" type="integer" column="roleId">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" length="255" />

        <many-to-many target-entity="Sententiaregum\CoreDomain\User\User" field="users" mapped-by="roles" />
        
    </entity>

</doctrine-mapping>

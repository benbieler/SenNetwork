<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sen.user.service.authentication" class="Sententiaregum\Bridge\User\Service\Authentication">
            <argument type="service" id="sen.user.repository" />
            <argument type="service" id="sen.user.security.api_key" />
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="logger" />
        </service>

        <service id="sen.user.form.authentication" class="Sententiaregum\Bundle\UserBundle\Form\Type\AuthType">
            <tag name="form.type" alias="sen_user_form_auth" />
        </service>

        <service id="sen.user.listener.auth.locked_user" class="Sententiaregum\Bundle\UserBundle\EventListener\IsLockedListener">
            <tag name="kernel.event_listener" event="sen.domain.user.auth.success" method="onFinishedAuth" />
        </service>
    </services>

</container>

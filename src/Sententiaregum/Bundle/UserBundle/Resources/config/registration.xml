<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sen.user.form.registration" class="Sententiaregum\Bundle\UserBundle\Form\Type\CreateType">
            <tag name="form.type" alias="sen_user_form_create" />
        </service>

        <service id="sen.user.validator.unique_user.doctrine" class="Sententiaregum\Bridge\User\Validator\Constraint\UniqueUserValidator">
            <argument type="service" id="doctrine" />
            <tag name="validator.constraint_validator" alias="sen.user.validator.unique_user" />
        </service>
    </services>

</container>

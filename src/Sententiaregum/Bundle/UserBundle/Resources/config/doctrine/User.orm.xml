<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Sententiaregum\Domain\User\User" table="SEN_User" repository-class="Sententiaregum\Bundle\UserBundle\Repository\UserRepository">

        <indexes>
            <index columns="realName" name="sen_user_realname" />
        </indexes>

        <unique-constraints>
            <unique-constraint columns="email"/>
            <unique-constraint columns="username" />
        </unique-constraints>

        <id name="userId" type="integer" column="userId">
            <generator strategy="AUTO" />
        </id>

        <field name="username" length="255" type="string" />
        <field name="password" length="255" type="string" />
        <field name="email" length="255" type="string" />
        <field name="realName" length="255" type="string" nullable="true" />
        <field name="registrationDate" type="datetime" />
        <field name="lastAction" type="datetime" />
        <field name="locked" type="boolean" />

        <one-to-one field="token" target-entity="Sententiaregum\Domain\User\Token" inversed-by="token">
            <join-column name="tokenId" referenced-column-name="tokenId" />
        </one-to-one>

        <many-to-many target-entity="Sententiaregum\Domain\User\Role" field="roles" inversed-by="users">
            <join-table name="SEN_UserToRole">
                <join-columns>
                    <join-column name="userId" referenced-column-name="userId" on-delete="CASCADE" on-update="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="roleId" referenced-column-name="roleId" on-update="CASCADE" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many target-entity="Sententiaregum\Domain\User\User" field="followers" mapped-by="following" />

        <many-to-many target-entity="Sententiaregum\Domain\User\User" field="following" inversed-by="followers">
            <join-table name="SEN_Followers">
                <join-columns>
                    <join-column name="userId" referenced-column-name="userId" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="followerId" referenced-column-name="userId" on-update="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        
    </entity>

</doctrine-mapping>
